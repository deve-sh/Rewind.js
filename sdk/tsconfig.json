{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
